              N'@UserID INT,@NickName NVARCHAR(50),@Name NVARCHAR(50),@Mobile NVARCHAR(20),@CustomerType INT,@AuditStatus INT,
                @TotalCount INT OUTPUT',
                
                @UserID,@NickName,@Name,@Mobile,@CustomerType,@AuditStatus,
