  <dataCommand name="Customer_Register" database="lawyers" commandType="Text">
    <commandText>
      <![CDATA[
        
            SET XACT_ABORT on
            BEGIN TRAN

            DECLARE @UserID INT =100001

            SELECT TOP 1 @UserID=([UserID]+1) FROM [dbo].[T_Customer] AS A
            ORDER BY A.[UserID] DESC

            INSERT INTO [dbo].[T_Login]
                       ([UserID]
                       ,[Account]
                       ,[Mobile]
                       ,[Email]
                       ,[Password]
                       ,[QQAccount]
                       ,[WechatAccount]
                       ,[WeiboAccount]
                       ,[BaiduAccount]
                       ,[UserRoleID]
                       ,[UserFrom]
                       ,[UserStatus])
                 VALUES
                       (@UserID
                       ,@Account
                       ,@Mobile
                       ,@Email
                       ,@Password
                       ,@QQAccount
                       ,@WechatAccount
                       ,@WeiboAccount
                       ,@BaiduAccount
                       ,@UserRoleID
                       ,@UserFrom
                       ,@UserStatus)

            INSERT INTO [dbo].[T_Customer]
                     ([UserID]
                     ,[Name]
                     ,[NickName]
                     ,[Face]
                     ,[Sex]
                     ,[BirthDay]
                     ,[Mobile]
                     ,[WexinNo]
                     ,[WexinQrcode]
                     ,[QQNo]
                     ,[Email]
                     ,[HomeTownCode]
                     ,[HomeTown]
                     ,[PCDCode]
                     ,[PCDDesc]
                     ,[Address]
                     ,[Job]
                     ,[Company]
                     ,[Signature]
                     ,[CustomerType]
                     ,[AuditStatus]
                     ,[Status]
                     ,[InDate]
                     ,[InUser]
                     ,[EditDate]
                     ,[EditUser])
               VALUES
                     (@UserID
                     ,@Name
                     ,@NickName
                     ,@Face
                     ,@Sex
                     ,@BirthDay
                     ,@Mobile
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,''
                     ,@CustomerType
                     ,@AuditStatus
                     ,'A'
                     ,GETDATE()
                     ,@InUser
                      ,GETDATE()
                     ,@InUser)

           
              --重新查询返回
               SELECT A.[UserID]
              ,A.[UserRoleID]
              ,A.[UserStatus]
	            ,B.[AuditStatus]
	            ,B.[Name]
              ,B.[NickName]
              ,B.[Face]
              ,B.[CustomerType]
        FROM [dbo].[T_Login] AS A 
        JOIN [dbo].[T_Customer] AS B ON A.UserID =B.UserID
        WHERE A.[UserID] = @UserID
        
            COMMIT TRAN
			]]>
    </commandText>
